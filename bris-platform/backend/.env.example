# Backend .env configuration
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://bris:bris_password@localhost:5432/bris_db

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-secret-key-change-in-production-must-be-at-least-32-characters-long
JWT_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d

# Services
ML_SERVICE_URL=http://localhost:8000
N8N_WEBHOOK_URL=http://localhost:5678/webhook/risk-alert

# CORS
CORS_ORIGINS=http://localhost:5173

# Risk Thresholds
RISK_SCORE_HIGH_THRESHOLD=75
RISK_SCORE_CRITICAL_THRESHOLD=90

# Event Processing
EVENT_BATCH_SIZE=100
EVENT_BATCH_INTERVAL=5000
EVENT_QUEUE_CONCURRENCY=5

# Logging
LOG_LEVEL=info

# Features
ENABLE_SWAGGER=true
ENABLE_METRICS=true
ENABLE_DEBUG_LOGS=false
