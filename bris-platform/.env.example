# ========================================
# BRIS Platform Environment Configuration
# ========================================

# IMPORTANT: This is a template file. Copy to .env and update with your actual values.
# DO NOT commit .env file to version control!

# ========================================
# ANTHROPIC API (Required for ML Service)
# ========================================
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ========================================
# Database Configuration
# ========================================
DATABASE_URL=postgresql://bris:bris_password@localhost:5432/bris_db
POSTGRES_DB=bris_db
POSTGRES_USER=bris
POSTGRES_PASSWORD=bris_password

# ========================================
# Redis Configuration
# ========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ========================================
# JWT Authentication
# ========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d

# ========================================
# Service URLs
# ========================================
BACKEND_URL=http://localhost:3000
ML_SERVICE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:5173
N8N_WEBHOOK_URL=http://localhost:5678/webhook/risk-alert

# ========================================
# CORS Configuration
# ========================================
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:5678

# ========================================
# n8n Configuration
# ========================================
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=admin123
N8N_HOST=localhost
N8N_PORT=5678

# ========================================
# Application Configuration
# ========================================
NODE_ENV=development
PORT=3000
PYTHON_ENV=development

# ========================================
# Rate Limiting
# ========================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# Monitoring & Logging
# ========================================
LOG_LEVEL=info
SENTRY_DSN=

# ========================================
# Feature Flags
# ========================================
ENABLE_SWAGGER=true
ENABLE_METRICS=true
ENABLE_DEBUG_LOGS=false

# ========================================
# ML Model Configuration
# ========================================
MODEL_PATH=./models
ISOLATION_FOREST_THRESHOLD=0.7
LSTM_SEQUENCE_LENGTH=10
RISK_SCORE_HIGH_THRESHOLD=75
RISK_SCORE_CRITICAL_THRESHOLD=90

# ========================================
# Event Processing
# ========================================
EVENT_BATCH_SIZE=100
EVENT_BATCH_INTERVAL=5000
EVENT_QUEUE_CONCURRENCY=5

# ========================================
# Session Configuration
# ========================================
SESSION_TIMEOUT_MINUTES=30
SESSION_INACTIVITY_MINUTES=15

# ========================================
# Email Configuration (Optional)
# ========================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@bris.io

# ========================================
# Slack Integration (Optional)
# ========================================
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#security-alerts

# ========================================
# Deployment Configuration
# ========================================
RAILWAY_TOKEN=
RENDER_API_KEY=
GITHUB_TOKEN=
